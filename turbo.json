{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
          "outputs": ["dist/**", "build/**"]
        },
        "deploy": {
          "dependsOn": ["build", "test", "lint"]
        },
        "test": {
          "dependsOn": ["build"],
          "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
        },
        "lint": {},
        "dev": {
          "cache": false,
          "persistent": true
        },
        "start": {
            "cache": false,
            "persistent": true
          }
      }
}